<%= form_for @locations, :url => { :controller => :locations, :action => :create} do |f| %>
  
  <div class="field">
    <%= f.label :locationclass %><br />
    <%= f.text_field :locationclass %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :lat %><br />
    <%= f.text_field :lat %>
  </div>

  <div class="field">
    <%= f.label :lng %><br />
    <%= f.text_field :lng %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
